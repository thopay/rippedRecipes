---
const { page, entry_type = "Entries" } = Astro.props;
---

<div class="flex flex-col items-center">
  <!-- Help text -->
  <span class="text-sm text-gray-700">
      Showing <span class="font-semibold text-gray-900">{page.start + 1}</span> to <span class="font-semibold text-gray-900">{page.end + 1}</span> of <span class="font-semibold text-gray-900 ">{page.total}</span> {entry_type}
  </span>
  <div class="inline-flex mt-2 xs:mt-0">
    <!-- Buttons -->
	<a href={page.url.prev == undefined ? "#" : page.url.prev} class={((page.currentPage == 1) ? "disabled-button" : "")}>
		<button class={"inline-flex items-center px-4 py-2 text-sm font-medium text-white rounded-l hover:bg-gray-900 " + ((page.currentPage == 1) ? "disabled-button bg-gray-400" : "bg-gray-800")}>
			<svg aria-hidden="true" class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
			Prev
		</button>
	</a>
	<a href={page.url.next == undefined ? "#" : page.url.next} class={((page.url.next == undefined) ? "disabled-button" : "")}>
		<button class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 border-0 border-l border-gray-700 rounded-r hover:bg-gray-900">
			Next
			<svg aria-hidden="true" class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
		</button>
	</a>
  </div>
</div>
<style>
	.disabled-button {
		pointer-events: none;
	}
</style>