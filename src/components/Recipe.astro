---
const { title, img_url, tags, url, desc } = Astro.props;
---
  <div class="max-w-sm rounded overflow-hidden shadow-lg m-3">
    <a href={url}>
      <img class="w-full" src={img_url} alt={title}>
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">{title}</div>
        <p class="text-gray-700 text-base">
          {desc}
        </p>
      </div>
    </a>
    <div class="px-6 pt-4 pb-2">
      {tags == null ? "" : tags.map((tag) => <a href={`/tags/${tag}`}><span class="inline-block bg-gray-200 hover:bg-indigo-400 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 hover:text-white mr-2 mb-2">#{tag}</span></a>)}
    </div>
  </div>